#!/usr/bin/env groovy
pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {image 'maven'}
            }
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }

        stage('Unit Test') { 
            agent {
                docker {
                image 'mysql'
                args '--name some-mysql -e MYSQL_ROOT_PASSWORD=root -d'}
            }
            steps {
                sh 'mvn test -DforkCount=0'
                sh '''
                    docker exec some-mysql sh -c 'exec mysql < ./db/dump.sql
                    '''
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml' 
                }
            }
        }
    }
}
