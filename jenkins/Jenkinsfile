#!/usr/bin/env groovy
pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }

        stage('Unit Test') { 
            agent {
                docker {
                image 'mysql'
                args '--name some-mysql -e MYSQL_ROOT_PASSWORD=root -d'}
            }
            steps {
               sh "mvn package -Dmaven.teste.skip=true"
            }
        }
    }
}
